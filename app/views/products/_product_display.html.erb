<h1>Product page</h1>
<h4><%= product.name%></h4>
<p><%= product.description %></p>
<p><%= number_to_currency product.price %></p>

<% if admin %>
<%= link_to 'Delete Product', product_path(@product), :data => {:confirm => "You sure?", :method => "delete"}  %>
<br>
<%= link_to 'Edit Product', edit_product_path(@product) %>
<% end %>
